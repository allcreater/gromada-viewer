{
  "version": 3,
  "configurePresets": [
    {
      "name": "base",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": {
          "type": "FILEPATH",
          "value": "${sourceDir}/3rd_party/vcpkg/scripts/buildsystems/vcpkg.cmake"
        },
        "CMAKE_POLICY_VERSION_MINIMUM": "3.5"
      }
    },
    {
      "name": "base-cl",
      "inherits": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "installDir": "${sourceDir}/out/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl.exe",
        "CMAKE_CXX_COMPILER": "cl.exe"
      },
      "environment": {
        "CXXFLAGS": "/W4 /Wall /external:W2 /external:anglebrackets"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "base-clang",
      "inherits": "base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build-clang/${presetName}",
      "installDir": "${sourceDir}/out/build-clang/install/${presetName}",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_CXX_FLAGS": "-stdlib=libc++",
        "CMAKE_EXE_LINKER_FLAGS": "-stdlib=libc++ -lc++ -lc++abi",
        "CMAKE_SHARED_LINKER_FLAGS": "-stdlib=libc++ -lc++ -lc++abi"
      },
      "environment": {
        "CXXFLAGS": "",
        "PATH": "/usr/bin:$penv{PATH}"
      }
    },
    {
      "name": "cl-x64-debug",
      "displayName": "MSVC x64 Debug",
      "inherits": "base-cl",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      },
      "environment": {
        "CXXFLAGS": "$penv{CXXFLAGS} /fsanitize=address"
      }
    },
    {
      "name": "cl-x64-release",
      "displayName": "MSVC x64 Release",
      "inherits": "base-cl",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      },
      "environment": {
        "CXXFLAGS": "$penv{CXXFLAGS}"
      }
    },
    {
      "name": "clang-x64-release",
      "displayName": "Clang x64 Release",
      "inherits": "base-clang",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}
